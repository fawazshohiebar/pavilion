# ==============================================
# COOLIFY PRODUCTION ENVIRONMENT VARIABLES
# ==============================================
# Copy these to Coolify's Environment Variables section
# 
# IMPORTANT FIXES NEEDED:
# 1. Remove duplicate "base64:" from APP_KEY
# 2. Add APP_URL with your actual domain
# 3. Set APP_DEBUG=false for production
# 4. Configure proper database path for SQLite
# ==============================================

APP_NAME=Pavilion
APP_ENV=production
# ⚠️ REMOVE DUPLICATE base64: - Should be: base64:uOvh9Dvm8O0hVgxvcWVU++258E2SnPQqS8m6fsNhke0=
APP_KEY=base64:uOvh9Dvm8O0hVgxvcWVU++258E2SnPQqS8m6fsNhke0=
# ⚠️ Set to false in production
APP_DEBUG=false
APP_TIMEZONE=UTC
# ⚠️ ADD YOUR DOMAIN HERE
APP_URL=http://ooks4oc84k0sggsg4ksggkkg.13.50.242.49.sslip.io

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

LOG_CHANNEL=stack
LOG_STACK=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database - SQLite
DB_CONNECTION=sqlite
# ⚠️ IMPORTANT: Specify full path in container
DB_DATABASE=/var/www/html/database/database.sqlite

# Session
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database
CACHE_STORE=file

# Statamic
# ⚠️ Add your Statamic license key if you have one
# STATAMIC_LICENSE_KEY=your-license-key-here

# If using Redis (optional but recommended)
# REDIS_CLIENT=phpredis
# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null
# REDIS_PORT=6379

# Mail (configure if needed)
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"
